# Power Edge Environment Configuration
# Copy this file to .env and fill in your values
# .env is gitignored and will NOT be committed

# SSH destination (user@hostname format)
export SSH=user@hostname

# Optional: Remote sudo password for deployment
# If set, enables passwordless sudo via stdin (-S flag)
# Leave empty if you have passwordless sudo configured
export SUDO_PASS=your-sudo-password-here

# Node configuration paths (auto-detected from hostname, or override)
# export NODE_CONFIG=config/nodes/hostname
